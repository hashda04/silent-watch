{
  "name": "silent-watch",
  "version": "1.0.0",
  "description": "A universal, dynamic, and adaptable JavaScript library for detecting silent UI workflow failures and optionally logging them to a backend.",
  "type": "module",
  "main": "dist/watcher.cjs",          
  "module": "dist/watcher.js",        
  "types": "dist/watcher.d.ts",       
  "exports": {
    ".": {
      "import": "./dist/watcher.js",  
      "require": "./dist/watcher.cjs" 
    }
  },
  "scripts": {
    "build": "tsup src/core/watcher.ts --format esm,cjs --dts --out-dir dist",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashda04/silent-watch.git"
  },
  "keywords": [
    "silent-watch",
    "ui-monitoring",
    "frontend-error-tracking",
    "silent-failure-detection",
    "workflow-tracking",
    "npm-package"
  ],
  "author": "Hashida Sherin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hashda04/silent-watch/issues"
  },
  "homepage": "https://github.com/hashda04/silent-watch#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.6.3"
  }
}
